---
import { getCollection } from 'astro:content';

const posts = await getCollection('insights');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Pre-render content for modals
const postsWithContent = await Promise.all(sortedPosts.map(async (post) => {
  const { Content } = await post.render();
  return { ...post, Content };
}));
---

<section id="insights" class="py-20 px-6">
  <div class="max-w-7xl mx-auto space-y-12">
    <div class="space-y-4">
      <h2 class="text-xs font-mono text-teal tracking-widest uppercase">Latest Thoughts</h2>
      <h3 class="text-4xl rounded md:text-5xl text-white font-bold">Insights & Publications</h3>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {postsWithContent.map((post) => (
        <article class="bg-navy-light/50 border border-teal/20 rounded-xl overflow-hidden hover:border-teal/50 transition-all group flex flex-col h-full">
            {post.data.image && (
                <button 
                    type="button"
                    data-modal-trigger={post.slug}
                    class="h-48 overflow-hidden relative w-full text-left cursor-pointer focus:outline-none focus:ring-2 focus:ring-teal/50 bg-[#020617]"
                >
                    <img 
                        src={`/assets/posts/${post.data.image}`} 
                        alt={post.data.title}
                        class="w-full h-full object-contain transform group-hover:scale-105 transition-transform duration-500"
                    />
                    <div class="absolute inset-0 bg-navy/20 group-hover:bg-transparent transition-colors"></div>
                </button>
            )}
            
            <div class="p-6 flex flex-col flex-1">
                <div class="flex justify-between items-start mb-4">
                    <span class="text-xs text-slate/60 font-mono">
                        {post.data.pubDate.toLocaleDateString('en-US', { month: 'long', year: 'numeric' })}
                    </span>
                </div>
                
                <h4 class="text-xl text-white font-bold mb-3 group-hover:text-teal transition-colors">
                    <button 
                        type="button"
                        data-modal-trigger={post.slug}
                        class="text-left hover:underline decoration-teal underline-offset-4 focus:outline-none"
                    >
                        {post.data.title}
                    </button>
                </h4>
                
                <p class="text-slate text-sm leading-relaxed mb-6 flex-1">
                    {post.data.description}
                </p>
                
                <button 
                    data-modal-trigger={post.slug}
                    class="inline-flex items-center text-teal font-bold text-sm hover:text-white transition-colors cursor-pointer"
                >
                    Read More 
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </button>
            </div>
        </article>
      ))}
    </div>
  </div>

  {/* Modals */}
  {postsWithContent.map((post) => (
    <dialog id={`modal-${post.slug}`} class="p-0 bg-transparent backdrop:bg-navy/80 w-full max-w-4xl h-fit m-auto rounded-2xl shadow-2xl open:animate-fadeIn backdrop:open:animate-fadeIn">
        {/* ... modal content ... */}
       <div class="bg-[#1E293B] border border-teal/40 rounded-2xl overflow-hidden max-h-[85vh] flex flex-col text-left shadow-2xl shadow-teal/10">
            {/* Header */}
            <div class="p-8 border-b border-white/10 flex justify-between items-start bg-[#1E293B]/95 sticky top-0 z-10 backdrop-blur-md">
                <div class="space-y-2 max-w-2xl">
                     <span class="text-sm text-teal font-mono uppercase tracking-widest font-bold">
                        {post.data.pubDate.toLocaleDateString('en-US', { day:'numeric', month: 'long', year: 'numeric' })}
                    </span>
                    <h2 class="text-2xl md:text-3xl text-white font-bold leading-tight font-sans">
                        {post.data.title}
                    </h2>
                </div>
                <button 
                    onclick={`document.getElementById('modal-${post.slug}').close()`}
                    class="p-2 text-slate-300 hover:text-teal transition-colors rounded-full hover:bg-white/5"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            {/* Content */}
            <div class="p-8 md:p-12 overflow-y-auto prose prose-invert prose-lg max-w-none font-sans text-slate-50
                prose-headings:text-teal prose-headings:font-bold 
                prose-p:text-slate-50 prose-p:leading-relaxed
                prose-li:text-slate-50
                prose-strong:text-teal prose-strong:font-bold
                prose-a:text-teal prose-a:no-underline hover:prose-a:underline
                prose-blockquote:border-l-teal prose-blockquote:text-slate-300 prose-blockquote:bg-white/5 prose-blockquote:py-2 prose-blockquote:px-4 prose-blockquote:rounded-r
            ">
                {post.data.image && (
                    <div class="mb-8 rounded-lg overflow-hidden bg-[#020617] flex justify-center border border-white/10">
                        <img 
                            src={`/assets/posts/${post.data.image}`} 
                            alt={post.data.title}
                            class="max-h-[60vh] w-auto object-contain"
                        />
                    </div>
                )}

                <post.Content />
                
                 {post.data.linkedinUrl && (
                    <div class="mt-12 pt-8 border-t border-white/10">
                        <a href={post.data.linkedinUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-6 py-3 bg-[#0077b5] text-white font-bold rounded hover:bg-[#0077b5]/90 transition-colors">
                            Discuss on LinkedIn
                         </a>
                    </div>
                )}
            </div>
       </div>
    </dialog>
  ))}
</section>

<script>
  // Add event listeners to all modal triggers
  const triggers = document.querySelectorAll('[data-modal-trigger]');
  triggers.forEach(trigger => {
    trigger.addEventListener('click', (e) => {
      e.preventDefault(); // Stop any default navigation
      const slug = trigger.getAttribute('data-modal-trigger');
      const modal = document.getElementById(`modal-${slug}`);
      if (modal) {
        (modal as HTMLDialogElement).showModal();
      }
    });
  });
</script>

<style>
  dialog::backdrop {
    backdrop-filter: blur(8px);
  }
  
  /* Animation for modal */
  dialog[open] {
    animation: zoomIn 0.3s ease-out;
  }
  
  @keyframes zoomIn {
    from {
        opacity: 0;
        transform: scale(0.95);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
  }

  /* Force teal color on strong tags within the modal content */
  :global(.prose strong) {
    color: #14B8A6 !important;
    font-weight: 700 !important;
  }
</style>
